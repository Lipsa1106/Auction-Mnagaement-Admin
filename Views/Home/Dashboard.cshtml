    <div class="row my-5">
        <div class="col-lg-4 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <div class="mb-4">
                        <h5 class="card-title fw-semibold">Recent Bidding</h5>
                    </div>
                    <ul class="timeline-widget mb-0 position-relative mb-n5">
                        @{
                            foreach (System.Data.DataRow dr in ViewBag.bid.Rows)
                            {

                                <li class="timeline-item d-flex position-relative">
                                    <div class="timeline-time text-dark flex-shrink-0 text-end">@dr["bid_time"].ToString()</div>
                                    <div class="timeline-badge-wrap d-flex flex-column align-items-center">
                                        <span class="timeline-badge border-2 border border-primary flex-shrink-0 my-8"></span>
                                    </div>
                                    <div class="timeline-desc fs-3 text-dark mt-n1">Bid received from @dr["bidder_name"].ToString() of $@dr["bid_value"].ToString()</div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-8 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Recent Product</h5>
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr class="text-center border-bottom">
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Product</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Brand</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Color</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Status</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Price</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">View</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (System.Data.DataRow dr in ViewBag.data.Rows)
                                    {

                                        <tr class="text-center">
                                            <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@dr["product_name"].ToString()</h6></td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-1">@dr["brand"].ToString()</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <p class="mb-0 fw-normal">@dr["color"].ToString()</p>
                                            </td>
                                            <td class="border-bottom-0">
                                                @if (@dr["status"].ToString() == "False")
                                                {
                                                    <span class="badge bg-danger rounded-3 fw-semibold" style="background:red">Disabled</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success rounded-3 fw-semibold" style="background:green !important">Enable</span>
                                                }
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 fs-3">$@dr["price"].ToString()</h6>
                                            </td>
                                            <td class="border-bottom-0">
                                                <h6 class="fw-semibold mb-0 fs-4">
                                                    <a class="fw-semibold mb-0 fs-3" asp-controller="Home" asp-action="Product">More..</a>

                                                </h6>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
