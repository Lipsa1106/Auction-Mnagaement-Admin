@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Hi-Tech Traders</title>
    <link rel="shortcut icon" type="image/png" href="~/img/logos/favicon.png" />
    <link rel="stylesheet" href="~/css/styles.min.css" />
    <link rel="stylesheet" href="~/css/admin-profile.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
            <div>
                <div class="brand-logo d-flex align-items-center justify-content-between">
                    <a asp-action="Dashboard" asp-controller="Home" class="text-nowrap logo-img">
                        <img src="~/img/logos/dark-logo.svg" width="180" alt="" />
                    </a>
                    <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
                        <i class="ti ti-x fs-8"></i>
                    </div>
                </div>
                <!-- Sidebar navigation-->
                <nav class="sidebar-nav scroll-sidebar" data-simplebar="">
                    <ul id="sidebarnav">

                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Dashboard" asp-controller="Home" aria-expanded="false">
                                <span>
                                    <i class="fs-5 fa-solid fa-gauge"></i>
                                </span>
                                <span class="hide-menu">Dashboard</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="User" asp-controller="Home" aria-expanded="false">
                                <span>
                                    <i class="fs-5 fa-solid fa-users"></i>
                                </span>
                                <span class="hide-menu">Manage user</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="Product" asp-controller="Home" aria-expanded="false">
                                <span>
                                    <i class="fs-5 fa-solid fa-square-plus"></i>
                                </span>
                                <span class="hide-menu">Product</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-action="ContactUs" asp-controller="Home" aria-expanded="false">
                                <span>
                                    <i class="fs-5 fa-solid fa-user-gear"></i>
                                </span>
                                <span class="hide-menu">User Touch</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Team">
                                <span>
                                    <i class="fs-5 fa-solid fa-people-group"></i>
                                </span>
                                <span class="hide-menu">Team</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Blog">
                                <span>
                                    <i class="fs-5 fa-solid fa-object-group"></i>
                                </span>
                                <span class="hide-menu">Blog</span>
                            </a>

                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-controller="Home" asp-action="Logout">
                                <span>
                                    <i class="fs-5 fa-solid fa-right-from-bracket"></i>
                                </span>
                                <span class="hide-menu">Logout</span>
                            </a>

                        </li>

                    </ul>
                </nav>
                <!-- End Sidebar navigation -->
            </div>
            <!-- End Sidebar scroll-->
        </aside>
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            <header class="app-header">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <ul class="navbar-nav">
                        <li class="nav-item d-block d-xl-none">
                            <a class="nav-link sidebartoggler nav-icon-hover" id="headerCollapse" href="javascript:void(0)">
                                <i class="fa-solid fa-bars"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-icon-hover" href="javascript:void(0)">
                                <i class="fa-solid fa-bell"></i>
                                <div class="notification bg-primary rounded-circle"></div>
                            </a>
                        </li>
                    </ul>
                    <div class="navbar-collapse justify-content-end px-0" id="navbarNav">
                        <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-end">
                            <li class="nav-item dropdown">
                                <a class="nav-link nav-icon-hover" href="javascript:void(0)" id="drop2" data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    <img src="~/img/profile/user-1.jpg" alt="" width="35" height="35" class="rounded-circle">
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-animate-up" aria-labelledby="drop2">
                                    <div class="message-body">

                                        <a class="btn btn-outline-primary mx-3 mt-2 d-block" asp-controller="Home" asp-action="Admin_Profile">
                                            <span class="mr-3">
                                                <i class="fs-5 fa-solid fa-address-card"></i>
                                            </span>
                                            <span class="hide-menu">Profile</span>
                                        </a>
                                        <a class="btn btn-outline-primary mx-3 mt-2 d-block" asp-controller="Home" asp-action="Logout">

                                            Logout
                                        </a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>
            <!--  Header End -->
            @RenderBody()


            <div class="container">

                <div class="footer-bottom ">
                    <div class="container">
                        <div class="row text-center">
                            <div class="col-lg-6 col-md-7">
                                <div class="footer-copyright">
                                    <p>Copyright © 2018 <a href="#" style="color:black !important">Hi-Tech Traders</a>. All Right Reserved.</p>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-5">
                                <div class="footer-payment">
                                    <a href="#"><img src="~/img/icon/payment.png" alt=""></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~js/sidebarmenu.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/js/apexcharts.min.js"></script>
    <script src="~/js/simplebar.js"></script>
    <script src="~/js/dashboard.js"></script>

</body>
</html>
